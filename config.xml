<?xml version="1.0" encoding="UTF-8"?>

    <!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
    <widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="cl.iglesianuevatacama.www" version="1.1.1">

        <name>Iglesia Nueva Atacama</name>

        <description>
            App oficial de la iglesia Metodista Pentecostal Nueva Atacama
        </description>

        <author email="contacto@iglesianuevatacama.cl">
            Iglesia Nueva Atacama
        </author>

        <!-- Define the main entry-point to the application -->
        <content src="index.html" />

        <!-- Customize your app and platform with the preference element. -->
        <preference name="DisallowOverscroll" value="true" />
        <!-- android: MIN SDK version supported on the target device. MAX version is blank by default. -->
        <preference name="android-minSdkVersion" value="14" />
        <!-- <preference name="android-build-tool" value="gradle" />  -->

        <!-- Define a specific version of PhoneGap to build into your app. -->
        <preference name="phonegap-version" value="cli-5.2.0" />
        <preference name="disable-push-notifications" value="1" />
        <!-- splash screen preferences -->
        <preference name="show-splash-screen-spinner" value="false" />
        <preference name="auto-hide-splash-screen" value="true" />
        <preference name="FadeSplashScreen" value="false" />

        <!-- Orientacion -->
        <!--<preference name="orientation" value="portrait"/>-->
        <!-- Plugins -->
        <plugin name="cordova-plugin-statusbar" source="npm" />
        <plugin name="cordova-plugin-device" spec="1.0.1" source="npm" />
        <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.2.1" />
        <plugin name="cordova-plugin-network-information" spec="1.2.1" />
        <plugin name="cordova-plugin-splashscreen" spec="3.2.2" />
        <plugin name="cordova-plugin-statusbar" spec="2.1.3" />
        <plugin name="cordova-plugin-dialogs" spec="1.1.1" source="npm" />
        <plugin name="cordova-plugin-calendar" source="npm"/>
        <plugin name="cordova-plugin-inappbrowser" spec="1.0.1" source="npm" />
    <!-- <plugin name="uk.co.workingedge.phonegap.plugin.launchnavigator" source="npm" /> -->

        <!-- Define app icon and splashscreen -->
        <platform name="ios">
           <preference name="SplashScreen" value="splash"/>
            <!-- iPhone 6 / 6+ -->
            <icon src="img/icon-60@3x.png" platform="ios" width="180" height="180" />

            <!-- iPhone / iPod Touch  -->
            <icon src="img/icon-60.png" platform="ios" width="60" height="60" />
            <icon src="img/icon-60@2x.png" platform="ios" width="120" height="120" />

            <!-- iPad -->
            <icon src="img/icon-76.png" platform="ios" width="76" height="76" />
            <icon src="img/icon-76@2x.png" platform="ios" width="152" height="152" />

            <!-- Settings Icon -->
            <icon src="img/icon-small.png" platform="ios" width="29" height="29" />
            <icon src="img/icon-small@2x.png" platform="ios" width="58" height="58" />

            <!-- Spotlight Icon -->
            <icon src="img/icon-40.png" platform="ios" width="40" height="40" />
            <icon src="img/icon-40@2x.png" platform="ios" width="80" height="80" />

            <!-- iPhone / iPod Touch -->
            <icon src="img/icon-ipod.png" platform="ios" width="57" height="57" />
            <icon src="img/icon-ipod@2x.png" platform="ios" width="114" height="114" />

            <!-- iPad -->
            <icon src="img/icon-72.png" platform="ios" width="72" height="72" />
            <icon src="img/icon-72@2x.png" platform="ios" width="144" height="144" />

            <!-- iPad Spotlight and Settings Icon -->
            <icon src="img/icon-50.png" platform="ios" width="50" height="50" />
            <icon src="img/icon-50@2x.png" platform="ios" width="100" height="100" />

            <splash src="img/Default~iphone.png" width="320" height="480"/>
            <splash src="img/Default@2x~iphone.png" width="640" height="960"/>
            <splash src="img/Default-Portrait~ipad.png" width="768" height="1024"/>
            <splash src="img/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
            <splash src="img/Default-Landscape~ipad.png" width="1024" height="768"/>
            <splash src="img/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>
            <splash src="img/Default-568h@2x~iphone.png" width="640" height="1136"/>
            <splash src="img/Default-736h.png" width="1242" height="2208"/>
            <splash src="img/Default-Landscape-736h.png" width="2208" height="1242"/>
		</platform>

		<platform name="android">
            <icon src="img/icon.png" />
            <!-- establece la posibilidad de mover la app a la sd-->
            <preference name="android-installLocation" value="auto" />
		</platform>
        <content src="index.html" />
        <!-- Allow external resources -->
        <allow-navigation href="*" />
        <access origin="*" />
        <!--<allow-intent href="*" />-->
        <allow-intent href="http://*/*" />
        <allow-intent href="https://*/*" />
        <allow-intent href="tel:*" />
        <allow-intent href="sms:*" />
        <allow-intent href="mailto:*" />
        <allow-intent href="geo:*" />
        <platform name="android">
            <allow-intent href="market:*" />
        </platform>
        <platform name="ios">
            <allow-intent href="itms:*" />
            <allow-intent href="itms-apps:*" />
        </platform>

    </widget>
