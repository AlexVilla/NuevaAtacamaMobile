<?xml version="1.0" encoding="UTF-8"?>

    <!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
    <widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="cl.iglesianuevatacama.www" version="1.2.0">

        <name>Iglesia Nueva Atacama</name>

        <description>
            App oficial de la iglesia Metodista Pentecostal Nueva Atacama
        </description>

        <author email="contacto@iglesianuevatacama.cl">
            Iglesia Nueva Atacama
        </author>

        <!-- Define the main entry-point to the application -->
        <content src="index.html" />

        <!-- Customize your app and platform with the preference element. -->
        <preference name="DisallowOverscroll" value="true" />
        <!-- android: MIN SDK version supported on the target device. MAX version is blank by default. -->
        <preference name="android-minSdkVersion" value="14" />
        <!-- <preference name="android-build-tool" value="gradle" />  -->

        <preference name="disable-push-notifications" value="1" />
        <!-- splash screen preferences -->
        <preference name="show-splash-screen-spinner" value="false" />
        <preference name="auto-hide-splash-screen" value="true" />
        <preference name="FadeSplashScreen" value="false" />

        <!-- Orientacion -->
        <preference name="orientation" value="portrait"/>
        <!-- Plugins -->
        <plugin name="cordova-plugin-statusbar" source="npm" />
        <plugin name="cordova-plugin-device" spec="1.0.1" source="npm" />
        <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.2.1" />
        <plugin name="cordova-plugin-network-information" spec="1.2.1" />
        <plugin name="cordova-plugin-splashscreen" spec="3.2.2" />
        <plugin name="cordova-plugin-statusbar" spec="2.1.3" />
        <plugin name="cordova-plugin-dialogs" spec="1.1.1" source="npm" />
        <plugin name="cordova-plugin-calendar" spec="~4.5.3"> <variable name="CALENDAR_USAGE_DESCRIPTION" value="This app uses your calendar" /> </plugin>
        <plugin name="cordova-plugin-inappbrowser" source="npm" />
        <plugin name="cordova-plugin-appavailability" source="npm" />

        <icon src="icon.png" />
        <splash src="splash.png" />


    <!-- Define app icon and splashscreen -->
        <platform name="ios">

            <!-- iPhone 6 / 6+ -->
            <icon src="img/icons/icon-60@3x.png" platform="ios" width="180" height="180" />

            <!-- iPhone / iPod Touch  -->
            <icon src="img/icons/icon-60@1x.png" platform="ios" width="60" height="60" />
            <icon src="img/icons/icon-60@2x.png" platform="ios" width="120" height="120" />

            <!-- iPad -->
            <icon src="img/icons/icon-76@1x.png" platform="ios" width="76" height="76" />
            <icon src="img/icons/icon-76@2x.png" platform="ios" width="152" height="152" />

            <!-- Settings icon -->
            <icon src="img/icons/icon-small@1x.png" platform="ios" width="29" height="29" />
            <icon src="img/icons/icon-small@2x.png" platform="ios" width="58" height="58" />

            <!-- Spotlight icon -->
            <icon src="img/icons/icon-40@1x.png" platform="ios" width="40" height="40" />
            <icon src="img/icons/icon-40@2x.png" platform="ios" width="80" height="80" />

            <!-- iPad -->
            <icon src="img/icons/icon-72@1x.png" platform="ios" width="72" height="72" />
            <icon src="img/icons/icon-72@2x.png" platform="ios" width="144" height="144" />

            <!-- iPad Spotlight and Settings icon -->
            <icon src="img/icons/icon-50@1x.png" platform="ios" width="50" height="50" />
            <icon src="img/icons/icon-50@2x.png" platform="ios" width="100" height="100" />


            <splash height="1136" platform="ios" src="img/screens/ios/Default-568h@2x~iphone.png" width="640" />
            <splash height="1334" platform="ios" src="img/screens/ios/Default-667h.png" width="750" />
            <splash height="2208" platform="ios" src="img/screens/ios/Default-736h.png" width="1242" />
            <splash height="1242" platform="ios" src="img/screens/ios/Default-Landscape-736h.png" width="2208" />
            <splash height="1536" platform="ios" src="img/screens/ios/Default-Landscape@2x~ipad.png" width="2048" />
            <splash height="768" platform="ios" src="img/screens/ios/Default-Landscape~ipad.png" width="1024" />
            <splash height="2048" platform="ios" src="img/screens/ios/Default-Portrait@2x~ipad.png" width="1536" />
            <splash height="1024" platform="ios" src="img/screens/ios/Default-Portrait~ipad.png" width="768" />
            <splash height="960" platform="ios" src="img/screens/ios/Default@2x~iphone.png" width="640" />
            <splash height="480" platform="ios" src="img/screens/ios/Default~iphone.png" width="320" />
        </platform>

		<platform name="android">
            <icon src="icon.png" />
            <!-- establece la posibilidad de mover la app a la sd-->
            <preference name="android-installLocation" value="auto" />
		</platform>
        <content src="index.html" />
        <!-- Allow external imgources -->
        <allow-navigation href="*" />
        <access origin="*" />
        <!--<allow-intent href="*" />-->
        <allow-intent href="http://*/*" />
        <allow-intent href="https://*/*" />
        <allow-intent href="tel:*" />
        <allow-intent href="sms:*" />
        <allow-intent href="mailto:*" />
        <allow-intent href="geo:*" />
        <platform name="android">
            <allow-intent href="market:*" />
        </platform>
        <platform name="ios">
            <allow-intent href="itms:*" />
            <allow-intent href="itms-apps:*" />
        </platform>

    </widget>
